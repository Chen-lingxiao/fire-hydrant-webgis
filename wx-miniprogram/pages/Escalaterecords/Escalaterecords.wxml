<!--pages/Escalaterecords/Escalaterecords.wxml-->
<view class="table">
  <view class="tr bg-w">
    <view class="th">设备号</view>
    <view class="th">故障描述</view>
    <view class="th ">上报时间</view>
  </view>
  <block wx:for="{{listData}}" wx:key="*this">
    <view class="tr bg-g" wx:if="{{index % 2 == 0}}">
      <view class="td">{{item.hydrantId}}</view>
      <view class="td">{{item.faultDesc}}</view>
      <view class="td">{{item.reportTime}}</view>
    </view>
    <view class="tr" wx:else>
      <view class="td">{{item.hydrantId}}</view>
      <view class="td">{{item.faultDesc}}</view>
      <view class="td">{{item.reportTime}}</view>
    </view>
  </block>
</view>
